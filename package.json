{
  "name": "lancaster-stemmer",
  "version": "0.1.3",
  "description": "Lancaster stemming algorithm",
  "license": "MIT",
  "keywords": [
    "paice",
    "husk",
    "lancaster",
    "stemmer",
    "cli",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/lancaster-stemmer.git"
  },
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "bin": {
    "lancaster-stemmer": "cli.js"
  },
  "devDependencies": {
    "eslint": "^0.10.0",
    "istanbul": "^0.3.0",
    "jscs": "^1.0.0",
    "jscs-jsdoc": "^0.3.0",
    "matcha": "^0.6.0",
    "mocha": "^2.0.0"
  },
  "scripts": {
    "test": "_mocha --check-leaks test.js",
    "test-travis": "istanbul cover _mocha --report lcovonly -- --check-leaks test.js",
    "coverage": "istanbul cover _mocha -- -- test.js",
    "lint-api": "eslint index.js",
    "lint-test": "eslint --env mocha test.js",
    "lint-benchmark": "eslint --global suite,set,bench benchmark.js",
    "lint-cli": "eslint --rule no-process-exit:false cli.js",
    "lint-style": "jscs --reporter inline index.js benchmark.js cli.js test.js",
    "lint": "npm run lint-api && npm run lint-test && npm run lint-cli && npm run lint-benchmark && npm run lint-style",
    "make": "npm run lint && npm run coverage",
    "install-benchmark": "npm install natural && git clone git@github.com:gruppler/paice.js.git node_modules/paice",
    "benchmark": "matcha benchmark.js"
  }
}
